---
import { Icon } from "astro-icon/components";
---

<section
  class="h-screen flex flex-col bg-hero_background_placeholder bg-center bg-cover bg-blend-overlay bg-white/60 justify-center"
  id="hero-section"
>
  <div class="text-center text-[#45505b] min-w-full mb-52">
    <h1 class="font-raleway font-bold text-5xl md:text-6xl">David Silva</h1>
    <p class="font-poppins text-3xl md:text-4xl mt-2 text-[#0563bb]">
      Software Developer
    </p>
    <div class="text-3xl flex flex-row space-x-8 mt-5 justify-center">
      <a
        href="https://github.com/Daverhan"
        target="_blank"
        title="David Silva's GitHub"
        aria-label="GitHub Icon"
        class="hover:text-[#0563bb]"><Icon name="github" /></a
      >
      <a
        href="https://www.linkedin.com/in/david-anthony-silva/"
        target="_blank"
        title="David Silva's LinkedIn"
        aria-label="LinkedIn Icon"
        class="hover:text-[#0563bb]"
        ><Icon name="linkedin" />
      </a>
    </div>
  </div>
</section>

<script type="module" is:inline>
  document.addEventListener("DOMContentLoaded", () => {
    const section = document.getElementById("hero-section");
    const img = new Image();
    img.src = "/hero-bg.avif";

    img.onload = () => {
      section.style.backgroundImage = `url('${img.src}')`;
    };
  });
</script>
